<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_margin="2dp"
    android:weightSum="3"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mImgUpdateSubGroup"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_update_sub_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_weight="2.7"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_toStartOf="@+id/mImgForward"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ABS_CUSTOM_VIEW.TextViewSemiBold
                android:id="@+id/mTxtSubGroupFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parking"
                android:textSize="25dp" />

            <ABS_CUSTOM_VIEW.TextViewSemiBold
                android:layout_marginStart="20dp"
                android:id="@+id/mTxtCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(44)"
                android:textSize="25dp" />

            <ABS_CUSTOM_VIEW.TextViewSemiBold
                android:visibility="gone"
                android:layout_marginStart="20dp"
                android:id="@+id/mTxtFolderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp" />

        </LinearLayout>

        <ImageView
            android:layout_alignParentEnd="true"
            android:id="@+id/mImgForward"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_setting_forwardarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <View
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/mImgForward"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


    </RelativeLayout>


</LinearLayout>