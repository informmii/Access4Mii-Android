<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/mMainQuesLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">


        <ABS_CUSTOM_VIEW.TextViewSemiBold
            android:id="@+id/mTxtMainQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="45dp"
            android:text="Are the accessible bays clearly sign posted from car park ebtrance?"
            android:textColor="@color/black"
            android:textSize="30dp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_corner_layer_yellow"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ABS_CUSTOM_VIEW.TextViewSemiBold
                android:id="@+id/mTxtMainAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Yes"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/mQuesLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mMainQuesLayout"
        android:layout_above="@+id/mBottomLayout"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/mLayoutAddSubQuestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />

        </ScrollView>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/mBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/mLayoutCancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_corner_layer_red"
            android:padding="10dp">

            <ABS_CUSTOM_VIEW.TextViewSemiBold
                android:id="@+id/mTxtCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/mText_cancel"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mLayoutSave"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_corner_layer_yellow"
            android:padding="10dp">

            <ABS_CUSTOM_VIEW.TextViewSemiBold
                android:id="@+id/mTxtSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/mTxt_save"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
