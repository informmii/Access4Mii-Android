<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/ic_thumsup"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_margin="50dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/thanku_star"
            android:layout_gravity="center" />

        <ABS_CUSTOM_VIEW.TextViewSemiBold
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/mText_Thanku"
            android:textColor="@color/colorPrimary"
            android:textSize="35dp" />

        <ABS_CUSTOM_VIEW.TextViewSemiBold
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/mText_Thanku_content"
            android:textColor="@color/colorDarkBlack"
            android:textSize="25dp" />

        <RelativeLayout
            android:id="@+id/mLayoutUpdate"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/rounded_corner_signin_button">

            <ABS_CUSTOM_VIEW.TextViewSemiBold
                android:id="@+id/mTextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="@string/mText_home"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>