<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/mImageBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_next_arrow" />

        <ABS_CUSTOM_VIEW.TextViewSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            android:text="@string/mText_change_password"
            android:textColor="@color/white"
            android:textSize="25dp" />


    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mImgLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_access4mii_logo" />


                <ABS_CUSTOM_VIEW.TextViewSemiBold
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:text="@string/mText_error_change_your_password_here"
                    android:textColor="@color/colorPrimary"
                    android:textSize="40dp" />


                <LinearLayout
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <LinearLayout
                        android:layout_marginEnd="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_unlock" />

                        <ABS_CUSTOM_VIEW.EditTextRegular
                            android:textSize="25dp"
                            android:id="@+id/mEditOldPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textAlignment="viewStart"
                            android:layout_marginStart="10dp"
                            android:background="@color/transparent"
                            android:inputType="textPassword"
                            android:imeOptions="actionNext"
                            android:hint="@string/mText_old_password"
                            android:padding="3dp"
                            android:gravity="start"
                            android:textColor="@color/abs_text_color_blacktuch"
                            android:textColorHint="@color/abs_text_color_blacktuch" />
                    </LinearLayout>

                    <View
                        android:layout_marginEnd="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/abs_text_color_blacktuch" />


                    <LinearLayout
                        android:layout_marginEnd="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_unlock" />

                        <ABS_CUSTOM_VIEW.EditTextRegular
                            android:textSize="25dp"
                            android:id="@+id/mEditNewPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textAlignment="viewStart"
                            android:layout_marginStart="10dp"
                            android:background="@color/transparent"
                            android:inputType="textPassword"
                            android:imeOptions="actionNext"
                            android:hint="@string/mText_new_password"
                            android:padding="3dp"
                            android:gravity="start"
                            android:textColor="@color/abs_text_color_blacktuch"
                            android:textColorHint="@color/abs_text_color_blacktuch" />
                    </LinearLayout>

                    <View
                        android:layout_marginEnd="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/abs_text_color_blacktuch" />


                    <LinearLayout
                        android:layout_marginEnd="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_unlock" />

                        <ABS_CUSTOM_VIEW.EditTextRegular
                            android:textSize="25dp"
                            android:id="@+id/mEditConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textAlignment="viewStart"
                            android:layout_marginStart="10dp"
                            android:background="@color/transparent"
                            android:inputType="textPassword"
                            android:imeOptions="actionDone"
                            android:hint="@string/mText_confirm_password"
                            android:padding="3dp"
                            android:gravity="start"
                            android:textColor="@color/abs_text_color_blacktuch"
                            android:textColorHint="@color/abs_text_color_blacktuch" />
                    </LinearLayout>

                    <View
                        android:layout_marginEnd="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/abs_text_color_blacktuch" />


                    <RelativeLayout
                        android:id="@+id/mLayoutSignIn"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="60dp"
                        android:background="@drawable/rounded_corner_signin_button">

                        <ABS_CUSTOM_VIEW.TextViewSemiBold
                            android:id="@+id/mTextNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:padding="10dp"
                            android:text="@string/mTextTitle_submit"
                            android:textColor="@color/white"
                            android:textSize="25dp" />
                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
