<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/mImageBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_star_red_bg"
            android:visibility="gone" />

        <ABS_CUSTOM_VIEW.TextViewSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/mTextTitle_build_audit"
            android:textColor="@color/white"
            android:textSize="25dp" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/mTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mLayoutTop"
        android:padding="10dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/mImageMainBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_star_red_bg" />

        <ABS_CUSTOM_VIEW.TextViewSemiBold
            android:gravity="center_horizontal"
            android:layout_toLeftOf="@+id/mImageMainBack"
            android:layout_toRightOf="@+id/mImageStarBack"
            android:id="@+id/mTxtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/mText_locations_selected"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/mImageStarBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_back_star" />


    </RelativeLayout>

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlueBlack">

        <RelativeLayout

            android:layout_centerVertical="true"
            android:id="@+id/mTxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@color/colorBlueBlack"
            android:padding="6dp">

        </RelativeLayout>



            <ABS_CUSTOM_VIEW.TextViewSemiBold
                android:layout_toLeftOf="@+id/mTxtSubmit"
                android:layout_toRightOf="@+id/mTxt"
                android:gravity="center_horizontal"
                android:id="@+id/mTxtFolderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Folder (1) car park ground flore"
                android:textColor="@color/white"
                android:textSize="22dp" />

      <RelativeLayout
          android:layout_centerVertical="true"
            android:id="@+id/mTxtSubmit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_layer_yellow"
            android:padding="6dp">

            <ABS_CUSTOM_VIEW.TextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/mTextTitle_save"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/mImgLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/mSingleImageLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp">

                    <ImageView
                        android:id="@+id/mImgSubGroup"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/car_park" />

                    <RelativeLayout
                        android:id="@+id/mImgAddPhoto"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/rounded_corner_app_color"
                        android:gravity="center"
                        android:padding="6dp">

                        <ABS_CUSTOM_VIEW.TextViewSemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/mText_add_photo"
                            android:textColor="@color/white"
                            android:textSize="19dp" />
                    </RelativeLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/mImgDeletePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_corner_layer_red_dark"
                    android:gravity="center"
                    android:padding="6dp">

                    <ABS_CUSTOM_VIEW.TextViewSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/mText_delete"
                        android:textColor="@color/white"
                        android:textSize="22dp" />
                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/mSingleImageLayout">

                <ABS_HELPER.FlowLayout
                    android:id="@+id/mFlowImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ABS_HELPER.FlowLayout>

            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mQuesLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/mMeasurementLayout"
            android:layout_below="@+id/mImgLayout"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp">

                <LinearLayout
                    android:id="@+id/mLayoutAddQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                </LinearLayout>

            </ScrollView>


        </LinearLayout>


        <HorizontalScrollView
            android:id="@+id/mMeasurementLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/mLayoutMeasurementView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

            </LinearLayout>

        </HorizontalScrollView>


    </RelativeLayout>


</LinearLayout>