<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="20dp"
        android:background="@color/colorWhite"
        android:id="@+id/mMainView"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ABS_CUSTOM_VIEW.TextViewSemiBold
                android:id="@+id/mTxtMainLocation"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parking"
                android:textSize="25dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ABS_CUSTOM_VIEW.TextViewSemiBold
                android:id="@+id/mTxtMainLocationCount"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="25dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mImgAddSubFolder"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_add_sub_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:id="@+id/mImgExpand"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_arrow_green_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/mLayoutForSubFolder"
        android:visibility="gone"
        android:background="@drawable/black_border_ractangel_shap"
        android:layout_below="@+id/mMainView"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>


</RelativeLayout>